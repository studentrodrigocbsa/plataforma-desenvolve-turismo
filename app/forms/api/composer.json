{
    "name": "rcbsa/desenvolveturismo",
    "description": "Desenvolve Turismo é uma plataforma de aprimoramento de destinos turísticos sustentáveis com base na MASA",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": [
                "src/Controller",
                "src/Infra",
                "src/Middleware",
                "src/Model",
                "src/Model/Enum",
                "src/Repository",
                "src/Util"
            ]
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1"
    },
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.7"
    },
    "scripts": {
        "check": "phpstan analyse src --level=6",
        "server": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8888"
        ]
    }
}
